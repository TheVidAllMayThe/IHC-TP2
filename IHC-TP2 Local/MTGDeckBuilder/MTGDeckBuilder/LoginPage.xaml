<Page x:Class="MTGDeckBuilder.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MTGDeckBuilder"
      mc:Ignorable="d" 
      d:DesignHeight="740" d:DesignWidth="1350"
      Title="LoginPage">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="magic_generic_login.jpg"></ImageBrush>
        </Grid.Background>
        <StackPanel Margin="0, 0, 0, 20" VerticalAlignment="Bottom" HorizontalAlignment="Center">
            <TextBox CaretBrush="White" Margin="0, 0, 0, 6" Width="250" Text="ola123@ua.pt" KeyDown="search_KeyboardKeyDown" Foreground="LightGray" x:Name="username" Background="Transparent" GotFocus="txtSearchBox_GotFocus" LostFocus="txtSearchBox_LostFocus" />
            <PasswordBox CaretBrush="White" Width="250" Foreground="LightGray" Password="test123" KeyDown="search_KeyboardKeyDown" x:Name="password" Background="Transparent" GotFocus="password_GotFocus" LostFocus="password_LostFocus" />
        </StackPanel>
    </Grid>
</Page>
